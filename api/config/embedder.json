{
  "embedder": {
    "client_class": "HuggingfaceClient",
    "batch_size": 500,
    "model_kwargs": {
      "model": "intfloat/multilingual-e5-large-instruct",
      "dimensions": 256,
      "encoding_format": "float",
      "device": "cuda"
    }
  },
  "retriever": {
    "top_k": 50
  },
  "text_splitter": {
    "split_by": "word",
    "chunk_size": 350,
    "chunk_overlap": 100
  }
} 